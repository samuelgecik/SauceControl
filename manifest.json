{
    "manifest_version": 3,
    "name": "SauceControl",
    "version": "0.0.4",
    "description": "Diner-themed productivity timer and website rationer.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "alarms",
        "offscreen"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content-script.js"
            ],
            "css": [
                "src/content/overlay.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "assets/icons/toolbar_icon.png",
            "48": "assets/icons/toolbar_icon.png",
            "128": "assets/icons/toolbar_icon.png"
        }
    },
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "assets/icons/toolbar_icon.png",
        "48": "assets/icons/toolbar_icon.png",
        "128": "assets/icons/toolbar_icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/images/closed.jpg",
                "assets/fonts/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}